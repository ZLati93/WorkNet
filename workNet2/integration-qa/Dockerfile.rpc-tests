FROM python:3.11-slim

WORKDIR /app

# Install dependencies
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Install pytest and dependencies
RUN pip install pytest pytest-xdist pytest-html xmlrpc

# Copy test files
COPY tests/rpc_tests.py /app/tests/

# Run tests
CMD ["pytest", "tests/rpc_tests.py", "-v", "--junitxml=reports/rpc_tests.xml"]

