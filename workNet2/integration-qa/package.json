{
  "name": "worknet-integration-qa",
  "version": "1.0.0",
  "description": "WorkNet Integration and QA Tests",
  "scripts": {
    "test": "jest --testTimeout=30000",
    "test:rpc": "pytest tests/rpc_tests.py -v",
    "test:api": "jest tests/api_tests.js --testTimeout=30000",
    "test:e2e": "jest tests/e2e_tests.js --testTimeout=60000",
    "test:all": "npm run test:rpc && npm run test:api && npm run test:e2e",
    "test:docker": "docker-compose up --abort-on-container-exit",
    "test:docker:build": "docker-compose build",
    "test:docker:down": "docker-compose down -v"
  },
  "dependencies": {
    "axios": "^1.6.2",
    "jest": "^29.7.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "playwright": "^1.40.1"
  },
  "jest": {
    "testEnvironment": "node",
    "testTimeout": 30000,
    "verbose": true
  }
}
